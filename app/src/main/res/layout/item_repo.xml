<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteDull"
    android:padding="@dimen/margin_padding_size_small"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_padding_size_small"
      app:cardCornerRadius="8dp"
      app:cardElevation="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgRepo"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/ic_launcher_foreground"
        />
  </androidx.cardview.widget.CardView>
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txtRepoTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textAlignment="textStart"
      android:textAllCaps="true"
      android:textColor="@color/colorGreyDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/cardView2"
      app:layout_constraintTop_toTopOf="@+id/cardView2"
      tools:text="Great Expectations a christmas and the presence od"
      />
  <TextView
      android:id="@+id/txtAuthor"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="16dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textAlignment="textStart"
      android:textColor="@color/colorGreyMedium"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/cardView2"
      app:layout_constraintTop_toBottomOf="@+id/txtRepoTitle"
      tools:text="Charles Dickens"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
